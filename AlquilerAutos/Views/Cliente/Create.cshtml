@model AlquilerAutos.Models.Cliente

@{
    Layout = "_LayoutSistema";
}


@{
    ViewBag.Title = "Nuevo Cliente";
}

<h2>Registrar Cliente</h2>

<div asp-validation-summary="All" class="text-danger"></div>


<form asp-action="Create" method="post">

    <div class="mb-3">
        <label>DNI</label>
        <input asp-for="DNI" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Nombres</label>
        <input asp-for="Nombres" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Apellidos</label>
        <input asp-for="Apellidos" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">
        Guardar
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Volver
    </a>
</form>
