@model IEnumerable<dynamic>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial;
            font-size: 12px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 6px;
        }

        th {
            background-color: #333;
            color: white;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<body>

    <h2>Reporte de Alquileres</h2>

    <table>
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Placa</th>
                <th>Auto</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Total</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Cliente</td>
                    <td>@a.Placa</td>
                    <td>@a.Auto</td>
                    <td>@a.FechaInicio.ToShortDateString()</td>
                    <td>@a.FechaFin.ToShortDateString()</td>
                    <td>S/. @a.Total</td>
                    <td>@a.Estado</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
