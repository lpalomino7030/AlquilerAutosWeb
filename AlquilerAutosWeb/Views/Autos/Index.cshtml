@model List<AlquilerAutosWeb.Models.Auto>


@{
    Layout = "_LayoutSistema";
}


@{
    ViewBag.Title = "Autos";
}

<h2>Listado de Autos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Nuevo Auto
</a>

<form method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text"
               name="buscar"
               value="@ViewBag.Buscar"
               class="form-control"
               placeholder="Buscar por placa, marca o modelo">
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">
            Buscar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-1">
            Limpiar
        </a>
    </div>
</form>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Placa</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Precio / Día</th>
            <th>Estado</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Placa</td>
                <td>@a.Marca</td>
                <td>@a.Modelo</td>
                <td>@a.Anio</td>
                <td>S/. @a.PrecioDia</td>
                <td>@a.EstadoAuto</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@a.Id"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@a.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('¿Eliminar auto?');">
                        Eliminar
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
