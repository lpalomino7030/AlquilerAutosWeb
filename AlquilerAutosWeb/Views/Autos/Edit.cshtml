@model AlquilerAutosWeb.Models.Auto

@{
    Layout = "_LayoutSistema";
}


<h2>Editar Auto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Placa</label>
        <input asp-for="Placa" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Marca</label>
        <input asp-for="Marca" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Modelo</label>
        <input asp-for="Modelo" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Año</label>
        <input asp-for="Anio" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Precio por día</label>
        <input asp-for="PrecioDia" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">
        Guardar cambios
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Cancelar
    </a>
</form>
